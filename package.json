{
  "name": "nodejs-template",
  "version": "1.0.0",
  "description": "Simple express-js app template",
  "main": "./dist/server.js",
  "scripts": {
    "server": "node dist/server.js",
    "test": "jest --config jest.config.json --forceExit --verbose",
    "clean": "rimraf dist && rimraf coverage",
    "build": "npm run clean && node_modules/.bin/webpack --config webpack.config.js",
    "postinstall": "npm run build",
    "dev:server": "nodemon dist/server.js",
    "dev:watch-src": "webpack -w",
    "dev": "concurrently \"yarn:dev:*\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:luanphandinh/nodejs-template.git"
  },
  "author": "Luan Phan <luanphandinh@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.0.36",
    "@types/jest": "^20.0.4",
    "@types/node": "^8.0.13",
    "@types/supertest": "^2.0.2",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.4",
    "jest": "^21.2.1",
    "json-loader": "^0.5.7",
    "nodemon": "^1.18.11",
    "rimraf": "^2.6.3",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^5.3.3",
    "ts-node": "^3.2.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^2.6.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.16.2"
  }
}
